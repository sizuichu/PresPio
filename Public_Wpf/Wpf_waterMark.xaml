<Window x:Name="markWindow" x:Class="PresPio.Wpf_waterMark"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PresPio"
        mc:Ignorable="d"
        Height="529" Width="637"
        WindowStartupLocation="CenterScreen"
        Title="超级水印"
        Loaded="markWindow_Loaded"
        ResizeMode="CanMinimize"
        Topmost="True">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <hc:ThemeResources />
                <hc:Theme />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Padding="15">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- 左侧设置面板 -->
            <DockPanel>
                <TextBlock DockPanel.Dock="Top"
                         Text="水印设置"
                         FontSize="16"
                         FontWeight="Bold"
                         Margin="0,0,0,15" />

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- 基础设置卡片 -->
                        <hc:Card Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="基础设置"
                                         FontWeight="Bold"
                                         Margin="0,0,0,10" />

                                <hc:TextBox x:Name="FontTextBox"
                                          hc:InfoElement.Title="水印内容"
                                          hc:InfoElement.Necessary="True"
                                          Margin="0,0,0,10"
                                          TextChanged="FontTextBox_TextChanged" />

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <TextBlock Text="字体属性" FontWeight="Bold" Margin="0,0,0,5" />
                                        <DockPanel Margin="0,0,0,5">
                                            <TextBlock Text="字体:" Width="40" />
                                            <TextBlock x:Name="FontNameText" Text="默认字体" TextTrimming="CharacterEllipsis" />
                                        </DockPanel>
                                        <DockPanel>
                                            <TextBlock Text="大小:" Width="40" />
                                            <TextBlock x:Name="Fontsize" Text="12" />
                                        </DockPanel>
                                    </StackPanel>

                                    <Button x:Name="FontBtn"
                                            Grid.Column="1"
                                            Content="字体设置"

                                            Click="FontBtn_Click"
                                            VerticalAlignment="Center" />
                                </Grid>

                                <Border Background="#F5F5F5"
                                        CornerRadius="4"
                                        Padding="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="当前颜色"
                                                 VerticalAlignment="Center" />
                                        <Border Grid.Column="1"
                                                x:Name="ColorPreviewBorder"
                                                Height="20"
                                                Background="{Binding ElementName=markLabel, Path=Foreground}"
                                                CornerRadius="2"
                                                Margin="11,0,6,0"
                                                MouseLeftButtonDown="Border_MouseLeftButtonDown"
                                                Cursor="Hand" />
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </hc:Card>

                        <!-- 布局设置卡片 -->
                        <hc:Card Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="布局设置"
                                         FontWeight="Bold"
                                         Margin="0,0,0,10" />

                                <hc:NumericUpDown x:Name="Num1"
                                                Margin="0,0,0,10"
                                                hc:InfoElement.Title="水平数量"

                                                ValueChanged="Num1_ValueChanged" />

                                <hc:NumericUpDown x:Name="Num2"
                                                Margin="0,0,0,10"
                                                hc:InfoElement.Title="垂直数量"

                                                ValueChanged="Num2_ValueChanged" />

                                <Slider x:Name="OpacitySlider"
                                      Maximum="255"
                                      Minimum="0"
                                      Value="255"
                                      hc:InfoElement.Title="水印透明度" />
                            </StackPanel>
                        </hc:Card>

                        <!-- 操作按钮卡片 -->
                        <hc:Card Height="54">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Button Content="添加水印"

                                        Margin="0,0,5,0"
                                        Height="35"
                                        Click="Button_Click_1">
                                    <Button.ToolTip>
                                        <TextBlock>
                                            <Run Text="点击添加水印到当前选中幻灯片" />
                                            <LineBreak />
                                            <Run Text="按住Ctrl键添加到母版" />
                                        </TextBlock>
                                    </Button.ToolTip>
                                </Button>

                                <Button Grid.Column="1"
                                        Content="删除水印"

                                        Margin="5,0,0,0"
                                        Height="35"
                                        Click="Button_Click">
                                    <Button.ToolTip>
                                        <TextBlock>
                                            <Run Text="点击删除当前幻灯片水印" />
                                            <LineBreak />
                                            <Run Text="按住Ctrl键删除母版水印" />
                                        </TextBlock>
                                    </Button.ToolTip>
                                </Button>
                            </Grid>
                        </hc:Card>

                        <!-- 提示信息 -->
                        <TextBlock Text="提示：双击预览区可以快速修改水印颜色"
                                 Margin="0,10,0,0"
                                 Foreground="Gray"
                                 TextWrapping="Wrap" />
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>

            <!-- 右侧预览区域 -->
            <Grid Grid.Column="1" Margin="15,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- 水印文字预览 -->
                <hc:Card Margin="0,0,0,15">
                    <Grid Height="200">
                        <TextBlock Text="水印预览"
                                 FontWeight="Bold"
                                 Margin="0,0,0,10" />
                        <Label x:Name="markLabel"
                               Content="水印文字"
                               FontSize="72"
                               FontFamily="Roboto Slab Medium"
                               MouseDoubleClick="markLabel_MouseDoubleClick" Height="150" Width="454" />
                    </Grid>
                </hc:Card>

                <!-- 水印效果预览 -->
                <hc:Card Grid.Row="1">
                    <Grid>
                        <TextBlock Text="效果预览"
                                 FontWeight="Bold"
                                 Margin="0,0,0,10" />
                        <hc:Watermark x:Name="Watermark"
                                    FontSize="18"

                                    Angle="45"
                                    AutoSizeEnabled="True"
                                    Mark="水印"
                                    MarkMargin="5" />
                    </Grid>
                </hc:Card>
            </Grid>
        </Grid>
    </Border>
</Window>